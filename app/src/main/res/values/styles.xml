<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="font">@font/custom_font</item>
        <item name="fontFamily">@font/orbitron</item>
    </style>


    <style name="buttonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:height">@dimen/button_height</item>

    </style>
    <style name="menuStyle">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>
    <style name="settingsMenuStyle">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:layout_margin">@dimen/menu_margin</item>
        <item name="android:padding">@dimen/menu_padding</item>
        <item name="android:textSize">@dimen/settings_menu_text_size</item>
    </style>
    <style name="toggleButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/menu_padding</item>
        <item name="android:layout_margin">@dimen/menu_margin</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="font">@font/custom_font</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="font">@font/custom_font</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="font">@font/custom_font</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>